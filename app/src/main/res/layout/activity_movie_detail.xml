<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1c1e"
    android:padding="16dp"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/image2"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitXY"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image2"
            android:fontFamily="monospace"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:fontFamily="@font/bubblegum_sans" />

        <TextView
            android:id="@+id/voteAverage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:fontFamily="monospace"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            app:fontFamily="@font/bubblegum_sans" />

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/voteAverage"
            android:fontFamily="monospace"
            android:textColor="@color/heading"
            android:textSize="15dp"
            app:fontFamily="@font/bubblegum_sans" />

        <TextView
            android:id="@+id/genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status"
            android:background="@color/red"
            android:fontFamily="monospace"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:fontFamily="@font/average_sans" />

        <TextView
            android:id="@+id/overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head_overview"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:fontFamily="@font/average_sans" />

        <TextView
            android:id="@+id/spoken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/genre"
            android:background="@color/red"
            android:fontFamily="monospace"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:fontFamily="@font/average_sans" />

        <TextView
            android:id="@+id/head_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/runtime"
            android:layout_marginTop="20dp"
            android:fontFamily="monospace"
            android:text="Overview"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:fontFamily="@font/bubblegum_sans" />


        <TextView
            android:id="@+id/runtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spoken"
            android:fontFamily="monospace"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            app:fontFamily="@font/bubblegum_sans" />


        <TextView
            android:id="@+id/similar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/overview"
            android:layout_marginTop="20dp"
            android:fontFamily="monospace"
            android:text="Similar Movies"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:fontFamily="@font/bubblegum_sans" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/similar"
            android:id="@+id/recyclerView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


    </RelativeLayout>

</ScrollView>